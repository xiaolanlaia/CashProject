<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--day-->

    <style name="cash_day_grey">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_grey</item>
    </style>

    <style name="cash_day_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <style name="cash_day_red">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_red</item>
    </style>
    <style name="cash_day_blue">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_blue</item>
    </style>

    <!--Toolbar-->
    <style name="toolbar_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
