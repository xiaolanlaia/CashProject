<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable name="vm"
                  type="com.w.xiaolanlaia.main.day.DayViewModel"/>
    </data>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_grey">
        <com.w.xiaolanlaia.util.widget.AppToolbar
                android:id="@+id/day_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:toolbar_style="day"
        />

        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:background="@color/common_white"
        >
            <LinearLayout
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center"
                    android:layout_marginTop="60dp"

                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"

            >
                <TextView
                        android:text="收支统计"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:id="@+id/accountant_text"
                        android:text="￥---"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_black"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
            >
                <TextView
                        android:text="支出"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:id="@+id/pay_text"
                        android:text="￥----"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_blue"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"


            >
                <TextView
                        android:text="收入"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:id="@+id/income_text"
                        android:text="￥----"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_red"
                />
            </LinearLayout>

        </GridLayout>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/day_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="#333333"
                app:tabSelectedTextColor="#007AFF"
                app:tabIndicatorColor="#007AFF"
                app:tabIndicatorFullWidth="false"
                android:layout_marginTop="10dp"
                android:background="@color/common_white"
        />

        <com.baoyz.widget.PullRefreshLayout
                android:id="@+id/pull_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >


        <androidx.viewpager.widget.ViewPager
                android:id="@+id/day_view_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />

        </com.baoyz.widget.PullRefreshLayout>

    </LinearLayout>
</layout>