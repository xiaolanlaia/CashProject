<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable name="vm"
                  type="com.w.xiaolanlaia.main.day.DayViewModel"/>
    </data>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:columnCount="2"
                    android:rowCount="2">
            <LinearLayout
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="20dp"

            >
                <TextView
                        android:text="借贷详情1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:text="借贷详情2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_black"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
            >
                <TextView
                        android:text="借贷详情1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:text="借贷详情2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_blue"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"

            >
                <TextView
                        android:text="借贷详情1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/cash_day_grey"
                />
                <TextView
                        android:text="借贷详情2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        style="@style/cash_day_red"
                />
            </LinearLayout>

        </GridLayout>
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/cash_day_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="#333333"
                app:tabSelectedTextColor="#007AFF"
                app:tabIndicatorColor="#007AFF"
                app:tabIndicatorFullWidth="false"
        />
        <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
        >

        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>
</layout>