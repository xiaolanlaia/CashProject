<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_status_height"
        android:background="@color/color_common_white"
    >
        <TextView
                android:id="@+id/toolbar_title"
                android:text="@string/toolbar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="@color/color_common_black"
        />

        <ImageView
                android:id="@+id/toolbar_back"
                style="@style/toolbar_style"
                android:src="@mipmap/nav_back"
                android:layout_alignParentStart="true"

        />
        <ImageView
                android:id="@+id/toolbar_transfer"
                android:src="@mipmap/transfer_view"
                style="@style/toolbar_style"
                android:layout_alignParentEnd="true"

        />

    </RelativeLayout>
